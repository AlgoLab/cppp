#!/bin/bash -e

[[ "$1" = "" ]] && echo "Argument required: number of parallel jobs" \
    && echo "Example: all_experiments 10" && exit

parallel  -j "$1" --header : ./run_experiment -n {num_species} \
	  -m {column_case} \
	  -u {mutation_rate} \
	  -r {recombination_rate} \
	  -i {instance} \
	  -c {constraints} \
          ::: num_species  1000 500 400 200 150 100 100 60 40 20 10  \
          ::: column_case 6 4 2 \
          ::: mutation_rate 0.4 0.2 0.1 0.01 0.001 0.0001 0.00001  \
          ::: recombination_rate 0.2 0.1 0.05 0.0001 0.0005 0.001 0.005 0.01 \
          ::: instance {0..49}  \



    
