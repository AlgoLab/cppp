#!/bin/bash -e

[[ "$1" = "" ]] && echo "Argument required: number of parallel jobs" \
    && echo "Example: all_experiments 10" && exit

parallel  -j "$1" --header : ./run_experiment -n {num_species} \
	  -m {column_case} \
	  -u {mutation_rate} \
	  -r {recombination_rate} \
	  -i {instance} \
	  -c {constraints} \
	  ::: num_species 20 40 60 100 150 200 400 500 1000 \
	  ::: column_case 2 4 6 \
	  ::: mutation_rate 0.1 0.2 0.4 \
	  ::: recombination_rate 0.01 0.05 0.1 0.2 0.4 \
	  ::: instance {0..49}  \
	  ::: constraints 0



    
